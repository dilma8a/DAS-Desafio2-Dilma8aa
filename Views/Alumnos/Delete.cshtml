@model DAS_Desafio2_Dilma8a.Models.Alumno

@{
    ViewData["Title"] = "Eliminar Alumno";
}

<h2>Eliminar Alumno</h2>

<div>
    <h4>¿Está seguro que desea eliminar este alumno?</h4>
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>
        <dt class="col-sm-2">Apellido</dt>
        <dd class="col-sm-10">@Model.Apellido</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="AlumnoId" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
