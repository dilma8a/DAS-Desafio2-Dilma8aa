@model DAS_Desafio2_Dilma8a.Models.Alumno

@{
    ViewData["Title"] = "Detalle Alumno";
}

<dl class="row">
    <dt class="col-sm-2">Nombre</dt>
    <dd class="col-sm-10">@Model.Nombre</dd>

    <dt class="col-sm-2">Apellido</dt>
    <dd class="col-sm-10">@Model.Apellido</dd>

    <dt class="col-sm-2">Fecha Nacimiento</dt>
    <dd class="col-sm-10">@Model.FechaNacimiento.ToString("yyyy-MM-dd")</dd>

    <dt class="col-sm-2">Grado</dt>
    <dd class="col-sm-10">@Model.Grado</dd>
</dl>

<a asp-action="Index" class="btn btn-secondary">Volver</a>
