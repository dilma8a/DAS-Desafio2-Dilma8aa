@{
    ViewData["Title"] = "Sistema de gestión de expedientes académicos";
}

<div class="text-center">
    <h1 class="display-4">Colegio San José</h1>
</div>

<div class="row mt-4">
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Alumnos</h5>
                <p class="card-text">Registrar y administrar los alumnos.</p>
                <a asp-controller="Alumnos" asp-action="Index" class="home-action" title="Alumnos">
                    <i class="fas fa-users fa-3x" aria-hidden="true"></i>
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Materias</h5>
                <p class="card-text">Administrar las materias de la institución.</p>
                <a asp-controller="Materias" asp-action="Index" class="home-action" title="Materias">
                    <i class="fas fa-book fa-3x" aria-hidden="true"></i>
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Expedientes</h5>
                <p class="card-text">Administrar inscripciones y calificaciones.</p>
                <a asp-controller="Expedientes" asp-action="Index" class="home-action" title="Expedientes">
                    <i class="fas fa-folder-open fa-3x" aria-hidden="true"></i>
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Promedios</h5>
                <p class="card-text">Ver promedios por alumno.</p>
                <a asp-controller="Reportes" asp-action="PromedioPorAlumno" class="home-action" title="Promedios">
                    <i class="fas fa-chart-bar fa-3x" aria-hidden="true"></i>
                </a>
            </div>
        </div>
    </div>
</div>
